<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_fragment_invite">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_back"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_margin"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_marginTop="70dp">

        <EditText
            android:id="@+id/edit_editTextNomeEvento"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:background="@drawable/bg_input_form"
            android:fontFamily="@font/montserrat_alternates"
            android:gravity="center"
            android:hint="Carregando..."
            android:textColor="@color/colorAccent"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/edit_editTextData"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/bg_input_form"
            android:fontFamily="@font/montserrat_alternates"
            android:gravity="center"
            android:hint="Carregando..."
            android:inputType="date"
            android:textColor="@color/colorAccent"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/edit_editTextlocal"
            android:layout_width="300dp"
            android:layout_height="80dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/bg_input_form"
            android:ems="10"
            android:fontFamily="@font/montserrat_alternates"
            android:gravity="center"
            android:hint="Carregando..."
            android:inputType="textPostalAddress"
            android:textAlignment="center"
            android:textColor="@color/colorAccent"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btn_listaCompras"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:buttonTint="@color/colorAccent"
            android:background="@drawable/bg_button_fragment"
            android:checked="false"
            android:contentDescription="Ative para seu evento ter lista de compras"
            android:fontFamily="@font/montserrat"
            android:text="Lista de compras"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/colorAccent"
            android:textSize="18sp" />

        <Button
            android:id="@+id/edit_btnSalvarEvento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:background="@drawable/bg_button_fragment"
            android:text="Salvar!"
            android:textAllCaps="false"
            android:textColor="@color/colorAccent"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>


</LinearLayout>